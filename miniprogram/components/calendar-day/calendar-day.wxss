/* calendar-day component */

.calendar-day {
  width: 100%;
}

.timeline-scroll {
  height: 800rpx;
  width: 100%;
}

/* ========== 时间刻度（通用） ========== */
.time-labels {
  position: absolute;
  left: 0;
  top: 0;
  width: 80rpx;
  height: 100%;
  z-index: 2;
}

.time-label {
  position: absolute;
  width: 80rpx;
  font-size: 22rpx;
  color: var(--text-hint);
  text-align: center;
  transform: translateY(-50%);
}

/* ========== 单列布局（学生/老师） ========== */
.timeline-body {
  position: relative;
  width: 100%;
}

.grid-area {
  position: absolute;
  left: 90rpx;
  right: 16rpx;
  top: 0;
  height: 100%;
}

.grid-line {
  position: absolute;
  left: 0;
  right: 0;
  height: 1rpx;
  background-color: var(--border-color);
}

.lesson-block {
  position: absolute;
  left: 4rpx;
  right: 4rpx;
  border-radius: var(--radius-sm);
  padding: 8rpx 12rpx;
  overflow: hidden;
  box-sizing: border-box;
  z-index: 3;
}

.block-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #fff;
  line-height: 1.3;
}

.block-time {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.85);
  margin-top: 2rpx;
}

.block-info {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.75);
  margin-top: 2rpx;
}

.ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* ========== 管理员多列布局（简化版） ========== */

/* 老师名字头部行 */
.admin-header {
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid var(--border-color);
  background-color: var(--bg-card);
  position: sticky;
  top: 0;
  z-index: 10;
}

.admin-time-placeholder {
  width: 80rpx;
  min-width: 80rpx;
}

.admin-teacher-names {
  display: flex;
  flex-direction: row;
  flex: 1;
}

.admin-teacher-name {
  flex: 1;
  min-width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 24rpx;
  font-weight: 500;
  color: var(--text-primary);
  border-left: 1rpx solid var(--border-color);
  box-sizing: border-box;
}

/* 时间轴主体 */
.admin-timeline {
  position: relative;
}

.admin-grid {
  position: absolute;
  left: 90rpx;
  right: 0;
  top: 0;
  height: 100%;
}

.admin-columns {
  display: flex;
  flex-direction: row;
  height: 100%;
}

.teacher-column {
  position: relative;
  flex: 1;
  min-width: 150rpx;
  height: 100%;
  border-left: 1rpx solid var(--border-color);
  box-sizing: border-box;
}

.admin-block {
  left: 4rpx;
  right: 4rpx;
}

/* ========== 空状态 ========== */
.empty-tip {
  text-align: center;
  color: var(--text-hint);
  font-size: var(--font-md);
  padding: var(--spacing-xl) 0;
}
