/* calendar-week component */

.calendar-week {
  width: 100%;
}

/* ========== 学生/老师：7 列时间轴 ========== */
.week-header {
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid var(--border-color);
  background-color: var(--bg-card);
}

.time-col-header {
  width: 68rpx;
  min-width: 68rpx;
}

.day-col-header {
  flex: 1;
  text-align: center;
  padding: 8rpx 0;
}

.day-label {
  font-size: 20rpx;
  color: var(--text-hint);
}

.day-num {
  font-size: 24rpx;
  font-weight: 500;
  color: var(--text-primary);
}

.week-scroll {
  height: 700rpx;
}

.week-body {
  position: relative;
  display: flex;
  flex-direction: row;
  width: 100%;
}

.time-col {
  position: relative;
  width: 68rpx;
  min-width: 68rpx;
}

.time-col .time-label {
  position: absolute;
  width: 68rpx;
  font-size: 18rpx;
  color: var(--text-hint);
  text-align: center;
  transform: translateY(-50%);
}

.day-columns {
  display: flex;
  flex-direction: row;
  flex: 1;
}

.day-col {
  position: relative;
  flex: 1;
  border-right: 1rpx solid var(--border-color);
  box-sizing: border-box;
}

.day-col:last-child {
  border-right: none;
}

.day-col .grid-line {
  position: absolute;
  left: 0;
  right: 0;
  height: 1rpx;
  background-color: var(--border-color);
}

.week-block {
  position: absolute;
  left: 2rpx;
  right: 2rpx;
  border-radius: 6rpx;
  padding: 4rpx;
  overflow: hidden;
  box-sizing: border-box;
  z-index: 3;
}

.wb-title {
  font-size: 18rpx;
  font-weight: 600;
  color: #fff;
  line-height: 1.2;
  text-align: center;
  word-break: break-all;
}

/* ========== 管理员：概览模式 ========== */
.admin-week-grid {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  gap: 8rpx;
  padding: 8rpx 0;
}

.admin-day-cell {
  flex: 1;
  background-color: var(--bg-card);
  border-radius: var(--radius-sm);
  padding: 12rpx 8rpx;
  text-align: center;
  min-height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.adc-header {
  margin-bottom: 8rpx;
}

.adc-label {
  font-size: 20rpx;
  color: var(--text-hint);
}

.adc-num {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.adc-count {
  font-size: 22rpx;
  color: var(--text-secondary);
  margin-bottom: 8rpx;
}

.adc-blocks {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  width: 100%;
  align-items: center;
}

.adc-bar {
  width: 80%;
  height: 12rpx;
  border-radius: 6rpx;
}

.adc-empty {
  font-size: 24rpx;
  color: var(--text-hint);
  margin-top: 16rpx;
}
