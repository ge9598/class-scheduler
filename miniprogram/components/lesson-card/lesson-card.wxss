.lesson-card {
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-md);
}

.course-name {
  font-size: var(--font-lg);
  font-weight: 600;
  color: var(--text-primary);
  letter-spacing: 1rpx;
}

.lesson-info {
  margin-top: var(--spacing-md);
}

.info-row {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
}

.info-label {
  font-size: var(--font-sm);
  color: var(--text-hint);
  width: 80rpx;
  flex-shrink: 0;
}

.info-value {
  font-size: var(--font-sm);
  color: var(--text-secondary);
  flex: 1;
}
