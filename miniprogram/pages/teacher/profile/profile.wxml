<view class="container">
  <!-- 用户信息 -->
  <view class="profile-header card">
    <view class="avatar flex-center">
      <text>{{ userInfo.name[0] || '?' }}</text>
    </view>
    <view class="profile-info">
      <view class="profile-name">{{ userInfo.name || '老师' }}</view>
      <view class="profile-phone text-hint">{{ userInfo.phone || '' }}</view>
    </view>
  </view>

  <!-- 功能入口 -->
  <van-cell-group inset title="快捷入口" border="{{ false }}">
    <van-cell title="今日课程" is-link icon="calendar-o" bind:click="goTodayLessons" />
  </van-cell-group>

  <!-- 退出登录 -->
  <view class="logout-section">
    <van-button plain round block type="danger" bind:click="handleLogout">退出登录</van-button>
  </view>
</view>
