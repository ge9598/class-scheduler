/* teacher calendar page styles */

.loading-wrap {
  display: flex;
  justify-content: center;
  padding: var(--spacing-xl) 0;
}

.day-lessons {
  margin-top: var(--spacing-md);
}

.day-lessons .section-title {
  font-size: var(--font-md);
  color: var(--text-secondary);
  margin-bottom: var(--spacing-sm);
}

/* ========== 即将上课提醒 ========== */
.upcoming-banner {
  background: linear-gradient(135deg, #ff9a56 0%, #ff6b6b 100%);
  border-radius: var(--radius-md);
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-sm);
  color: #fff;
}

.upcoming-header {
  display: flex;
  align-items: center;
  margin-bottom: var(--spacing-xs);
}

.upcoming-icon {
  font-size: 32rpx;
  margin-right: var(--spacing-xs);
}

.upcoming-title {
  font-size: var(--font-md);
  font-weight: 600;
  flex: 1;
}

.upcoming-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  opacity: 0.8;
}

.upcoming-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: rgba(255, 255, 255, 0.2);
  border-radius: var(--radius-sm);
  padding: var(--spacing-xs) var(--spacing-sm);
  margin-top: var(--spacing-xs);
}

.upcoming-name {
  font-size: var(--font-sm);
  font-weight: 500;
}

.upcoming-time {
  font-size: var(--font-xs);
  opacity: 0.9;
}

/* ========== 视图导航 ========== */
.view-nav {
  background-color: var(--bg-card);
  border-radius: var(--radius-md);
  padding: var(--spacing-sm) var(--spacing-md);
  margin-bottom: var(--spacing-sm);
}

.nav-row {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: var(--spacing-xs);
}

.nav-arrow {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: var(--text-secondary);
}

.nav-arrow:active {
  color: var(--text-primary);
}

.nav-date {
  flex: 1;
  text-align: center;
  font-size: var(--font-lg);
  font-weight: 500;
  color: var(--text-primary);
}

.view-tabs {
  display: flex;
  justify-content: center;
  gap: 8rpx;
}

.view-tab {
  padding: 8rpx 32rpx;
  font-size: var(--font-sm);
  color: var(--text-secondary);
  border-radius: 28rpx;
  background-color: var(--bg-page);
}

.view-tab.active {
  background-color: var(--primary-color);
  color: #fff;
  font-weight: 500;
}
