<view class="container">
  <!-- 即将上课提醒 banner -->
  <view class="upcoming-banner" wx:if="{{ upcomingLessons.length > 0 }}">
    <view class="upcoming-header">
      <text class="upcoming-icon">&#x1F514;</text>
      <text class="upcoming-title">即将上课</text>
      <view class="upcoming-close" bind:tap="dismissReminder">&#x2715;</view>
    </view>
    <view
      class="upcoming-item"
      wx:for="{{ upcomingLessons }}"
      wx:key="_id"
      data-id="{{ item._id }}"
      bind:tap="onUpcomingTap"
    >
      <text class="upcoming-name">{{ item.courseName }}</text>
      <text class="upcoming-time">{{ item.startTime }} ({{ item.minutesLeft }}分钟后)</text>
    </view>
  </view>

  <!-- 视图导航栏 -->
  <view class="view-nav">
    <view class="nav-row" wx:if="{{ viewMode !== 'month' }}">
      <view class="nav-arrow" bind:tap="prevDate">‹</view>
      <view class="nav-date" bind:tap="goToday">
        <text wx:if="{{ viewMode === 'day' }}">{{ dateLabel }}</text>
        <text wx:else>{{ weekLabel }}</text>
      </view>
      <view class="nav-arrow" bind:tap="nextDate">›</view>
    </view>
    <view class="view-tabs">
      <view
        class="view-tab {{ viewMode === 'day' ? 'active' : '' }}"
        data-mode="day"
        bind:tap="switchView"
      >日</view>
      <view
        class="view-tab {{ viewMode === 'week' ? 'active' : '' }}"
        data-mode="week"
        bind:tap="switchView"
      >周</view>
      <view
        class="view-tab {{ viewMode === 'month' ? 'active' : '' }}"
        data-mode="month"
        bind:tap="switchView"
      >月</view>
    </view>
  </view>

  <!-- 加载中 -->
  <view class="loading-wrap" wx:if="{{ loading }}">
    <van-loading size="24px" color="var(--accent-color)">加载中...</van-loading>
  </view>

  <!-- 月视图（用 hidden 保持 calendar 组件存活） -->
  <view hidden="{{ loading || viewMode !== 'month' }}">
    <calendar
      markedDates="{{ markedDates }}"
      selectedDate="{{ selectedDate }}"
      bind:dayclick="onDayClick"
      bind:monthchange="onMonthChange"
    />
    <view class="day-lessons" wx:if="{{ dayLessons.length > 0 }}">
      <view class="section-title">{{ selectedDate }} 共 {{ dayLessons.length }} 节课</view>
      <lesson-card
        wx:for="{{ dayLessons }}"
        wx:key="_id"
        lesson="{{ item }}"
        mode="student"
      />
    </view>
    <van-empty
      wx:if="{{ dayLessons.length === 0 && selectedDate }}"
      description="当天暂无课程"
    />
  </view>

  <!-- 日视图 -->
  <block wx:if="{{ !loading && viewMode === 'day' }}">
    <calendar-day
      lessons="{{ dayLessons }}"
      role="student"
      bind:lessonclick="onLessonClick"
    />
  </block>

  <!-- 周视图 -->
  <block wx:if="{{ !loading && viewMode === 'week' }}">
    <calendar-week
      lessons="{{ weekLessons }}"
      weekDates="{{ weekDates }}"
      role="student"
      bind:lessonclick="onLessonClick"
    />
  </block>
</view>
