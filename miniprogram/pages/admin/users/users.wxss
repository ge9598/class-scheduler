.header {
  margin-bottom: var(--spacing-md);
}

/* 筛选按钮 - pill 样式 */
.filter-bar {
  display: flex;
  gap: 16rpx;
  margin-bottom: var(--spacing-md);
}

.filter-pill {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx 28rpx;
  border-radius: 32rpx;
  font-size: var(--font-sm);
  background-color: var(--primary-light);
  color: var(--text-secondary);
  border: none;
  transition: all 0.2s;
}

.filter-pill.active {
  background-color: var(--accent-color);
  color: var(--primary-color);
  font-weight: 600;
}

.user-card {
  margin-bottom: 0;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  color: #fff;
  font-size: var(--font-lg);
  font-weight: 600;
  margin-right: var(--spacing-md);
  flex-shrink: 0;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: var(--font-md);
  font-weight: 500;
  margin-bottom: 4rpx;
}

.user-phone {
  font-size: var(--font-sm);
}

.swipe-actions {
  display: flex;
  height: 100%;
}

.swipe-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 130rpx;
  height: 100%;
  color: #fff;
  font-size: var(--font-sm);
}

.edit-btn {
  background-color: var(--secondary-color);
}

.delete-btn {
  background-color: var(--danger-color);
}

.dialog-title {
  font-size: var(--font-xl);
  font-weight: 600;
  text-align: center;
  margin-bottom: var(--spacing-lg);
}

.role-picker {
  padding: var(--spacing-md) var(--spacing-sm);
}

.role-label {
  font-size: var(--font-md);
  color: var(--text-secondary);
  margin-bottom: var(--spacing-sm);
}

.required {
  color: var(--danger-color);
}

/* 角色选项 - pill 样式 */
.role-options {
  display: flex;
  gap: 16rpx;
}

.role-pill {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx 32rpx;
  border-radius: 32rpx;
  font-size: var(--font-sm);
  background-color: var(--primary-light);
  color: var(--text-secondary);
  border: none;
}

.role-pill.active {
  background-color: var(--accent-color);
  color: var(--primary-color);
  font-weight: 600;
}

.dialog-actions {
  padding: var(--spacing-lg) 0;
}
