<view class="container">
  <!-- 用户信息 -->
  <view class="profile-header card">
    <view class="avatar flex-center">
      <text>{{ userInfo.name[0] || '?' }}</text>
    </view>
    <view class="profile-info">
      <view class="profile-name">{{ userInfo.name || '管理员' }}</view>
      <view class="profile-role text-hint">管理员</view>
    </view>
  </view>

  <!-- 管理功能入口 -->
  <van-cell-group inset title="管理功能" border="{{ false }}">
    <van-cell title="课程管理" is-link icon="orders-o" bind:click="goCourses" />
    <van-cell title="购课管理" is-link icon="balance-list-o" bind:click="goEnrollments" />
  </van-cell-group>

  <!-- 退出登录 -->
  <view class="logout-section">
    <van-button plain round block type="danger" bind:click="handleLogout">退出登录</van-button>
  </view>
</view>
