.login-page {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 0 80rpx;
  background-color: var(--bg-page);
}

.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 120rpx;
}

.logo-placeholder {
  width: 180rpx;
  height: 180rpx;
  border-radius: 36rpx;
  background: linear-gradient(135deg, var(--primary-color), #6BB5FF);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: var(--spacing-lg);
}

.logo-text {
  color: #ffffff;
  font-size: 36rpx;
  font-weight: 600;
}

.subtitle {
  font-size: var(--font-md);
  color: var(--text-hint);
  margin-top: var(--spacing-sm);
}

.login-actions {
  width: 100%;
}

/* 绑定手机号区域 */
.bind-section {
  width: 100%;
}

.bind-tip {
  display: flex;
  align-items: flex-start;
  background-color: #fffbe6;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 48rpx;
}

.bind-tip-text {
  font-size: var(--font-sm);
  color: #8c8c00;
  margin-left: 12rpx;
  line-height: 1.5;
}

.bind-form {
  width: 100%;
}

.phone-field {
  background-color: #f5f5f5;
  border-radius: 12rpx;
  margin-bottom: 32rpx;
  padding: 8rpx 16rpx;
}

.wx-phone-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background-color: var(--primary-color);
  color: #ffffff;
  font-size: var(--font-md);
  border-radius: 44rpx;
  border: none;
}

.wx-phone-btn::after {
  border: none;
}

.bind-actions {
  width: 100%;
}

.back-link {
  text-align: center;
  margin-top: 40rpx;
}

.back-link text {
  font-size: var(--font-sm);
  color: var(--text-hint);
  text-decoration: underline;
}
